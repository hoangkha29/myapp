%h1.blog-title= @article.title
.main
  %article
    %p{:style => "margin-bottom: 55px;"}= @article.body
    = button_to "Edit", edit_article_path(@article) , method: :get, :class => "btn btn-primary"
    = button_to "Delete", @article , method: :delete, :class => "btn btn-danger", data: { confirm: "Are you sure?" }
  %br/
  %br/
  %br/
  .comment
    %h2 Comments
    = render @article.comments
    %h3 Add a comment:
    = render 'comments/form'
